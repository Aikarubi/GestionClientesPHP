{# templates/cliente/list.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        thead {
            background-color: #3498db;
            color: #fff;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>Lista de Clientes</h1>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Ciudad</th>
                <th>Update</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            {% for cliente in clientes %}
                <tr>
                    <td>
                        <a href="client/detail/{{ cliente.getId }}">{{ cliente.getNombre }}</a>
                    </td>

                    <td>{{ cliente.getCiudad }}</td>

                    <td>
                        <a href="{{ path('app_updateCliente', {'id': cliente.getId}) }}" >[U]</a>
                    </td>

                    <td>
                        <a href="/delete/{{ cliente.getId }}" >[X]</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfooter>
            <tf><a href="/insert"> INSERTAR </a></tf>
        </tfooter>
    </table>
</body>
{% endblock %}
